<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>GLW_Prevent_Invalid_Quantity</fullName>
    <active>true</active>
    <description>Prevent saving order items with invalid quantities.</description>
    <errorConditionFormula>AND(NOT(ISBLANK(GLW_Quantity__c)), GLW_Quantity__c &lt;= 0)</errorConditionFormula>
    <errorDisplayField>GLW_Quantity__c</errorDisplayField>
    <errorMessage>Quantity cannot be negative or zero.</errorMessage>
</ValidationRule>
